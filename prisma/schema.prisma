// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

/**
 * ================= USERS & ROLES (NextAuth) =================
 */

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  roleId String? @db.ObjectId
  role   Role?   @relation(fields: [roleId], references: [id])

  accounts Account[]
  sessions Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Role {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String  @unique
  description String?
  users       User[]
}

/**
 * =============== NextAuth standard (Mongo) ===============
 */

model Account {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  userId            String @db.ObjectId
  type              String
  provider          String
  providerAccountId String

  refresh_token String?
  access_token  String?
  expires_at    Int?
  token_type    String?
  scope         String?
  id_token      String?
  session_state String?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([expires])
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

/**
 * ===================== ASSET CORE =====================
 */

model AssetType {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String  @unique // เช่น ครุภัณฑ์สำนักงาน, คอมพิวเตอร์
  description String?
  assets      Asset[]
}

model AssetStatus {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String  @unique // ใช้งานอยู่, ซ่อมบำรุง, ชำรุด, จำหน่าย
  description String?
  assets      Asset[]
}

model Location {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  building    String?
  room        String?
  floor       String?
  description String?
  assets      Asset[]
}

model Staff {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  fullName String
  position String?
  phone    String?
  email    String? @unique
  assets   Asset[]
}

model Asset {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  assetCode String    @unique // รหัสครุภัณฑ์ เช่น EDU-001
  assetName String
  typeId    String    @db.ObjectId
  type      AssetType @relation(fields: [typeId], references: [id])

  brand        String?
  model        String?
  serialNo     String?
  purchaseDate DateTime?
  price        Float? // MongoDB supports Float for numeric values
  warrantyExp  DateTime?

  statusId String      @db.ObjectId
  status   AssetStatus @relation(fields: [statusId], references: [id])

  locationId String?   @db.ObjectId
  location   Location? @relation(fields: [locationId], references: [id])

  staffId String? @db.ObjectId
  staff   Staff?  @relation(fields: [staffId], references: [id])

  note String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([typeId])
  @@index([statusId])
  @@index([locationId])
  @@index([staffId])
  @@index([serialNo])
}
